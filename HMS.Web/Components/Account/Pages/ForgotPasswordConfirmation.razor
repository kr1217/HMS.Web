@*
 * FILE: ForgotPasswordConfirmation.razor
 * PURPOSE: Frontend web component.
 * COMMUNICATES WITH: None
*@
@page "/Account/ForgotPasswordConfirmation"
@inject NavigationManager NavigationManager

<PageTitle>Security Recovery | Token Dispatched</PageTitle>

<RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="min-height: 50vh;">
    <RadzenCard Class="rz-shadow-4 rz-p-8 rz-text-align-center"
        Style="width: 100%; max-width: 500px; border-radius: 20px;">
        <RadzenStack Gap="1.5rem" AlignItems="AlignItems.Center">

            <div
                style="width: 80px; height: 80px; border-radius: 50%; background: var(--rz-info-lighter); display: flex; align-items: center; justify-content: center;">
                <RadzenIcon Icon="mark_email_read" Style="font-size: 3rem; color: var(--rz-info);" />
            </div>

            <RadzenStack Gap="0.5rem">
                <RadzenText Text="Recovery Protocol Initiated" TextStyle="TextStyle.H5"
                    Class="rz-m-0 rz-font-weight-bold rz-color-primary" />
                <RadzenText
                    Text="A security key reset token has been dispatched to your institutional email. Please follow the instructions to restore access."
                    TextStyle="TextStyle.Body1" Class="rz-color-text-secondary" />
            </RadzenStack>

            <RadzenButton Text="Return to Authorization Gateway" Icon="arrow_back" ButtonStyle="ButtonStyle.Light"
                Variant="Variant.Flat" Click="@(() => NavigationManager.NavigateTo("Account/Login"))" Class="rz-mt-4" />
        </RadzenStack>
    </RadzenCard>
</RadzenStack>

