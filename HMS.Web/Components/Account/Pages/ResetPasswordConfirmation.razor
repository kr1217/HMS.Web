@page "/Account/ResetPasswordConfirmation"
@inject NavigationManager NavigationManager

<PageTitle>Security Reset | Complete</PageTitle>

<RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="min-height: 50vh;">
    <RadzenCard Class="rz-shadow-4 rz-p-8 rz-text-align-center"
        Style="width: 100%; max-width: 500px; border-radius: 20px;">
        <RadzenStack Gap="1.5rem" AlignItems="AlignItems.Center">

            <div
                style="width: 80px; height: 80px; border-radius: 50%; background: var(--rz-success-lighter); display: flex; align-items: center; justify-content: center;">
                <RadzenIcon Icon="lock_reset" Style="font-size: 3rem; color: var(--rz-success);" />
            </div>

            <RadzenStack Gap="0.5rem">
                <RadzenText Text="Security Credentials Synchronized" TextStyle="TextStyle.H5"
                    Class="rz-m-0 rz-font-weight-bold rz-color-success-dark" />
                <RadzenText
                    Text="Your institutional security key has been successfully reset. You may now authorize access with your new credentials."
                    TextStyle="TextStyle.Body1" Class="rz-color-text-secondary" />
            </RadzenStack>

            <RadzenButton Text="Return to Authorization Gateway" Icon="login" ButtonStyle="ButtonStyle.Primary"
                Variant="Variant.Flat" Click="@(() => NavigationManager.NavigateTo("Account/Login"))" Class="rz-mt-4" />
        </RadzenStack>
    </RadzenCard>
</RadzenStack>
