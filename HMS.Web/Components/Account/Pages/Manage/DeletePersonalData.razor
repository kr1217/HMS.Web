@*
 * FILE: DeletePersonalData.razor
 * PURPOSE: Frontend web component.
 * COMMUNICATES WITH: None
*@
@page "/Account/Manage/DeletePersonalData"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using HMS.Web.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager
@inject ILogger<DeletePersonalData> Logger

<PageTitle>Identity Orchestration | Terminate Account</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenText Text="Terminate Institutional Identity" TextStyle="TextStyle.H5" Class="rz-m-0 rz-color-primary" />
    <StatusMessage Message="@message" />

    <RadzenAlert AlertStyle="AlertStyle.Danger" Variant="Variant.Flat" Shade="Shade.Lighter" AllowClose="false"
        Icon="delete_forever">
        <RadzenStack Gap="0.5rem">
            <RadzenText Text="Irreversible Action Warning" TextStyle="TextStyle.Subtitle2"
                Class="rz-font-weight-bold" />
            <RadzenText
                Text="Terminating this identity will permanently delete all associated personal artifacts, audit logs, and clinical authorizations. This action cannot be undone."
                TextStyle="TextStyle.Body2" />
        </RadzenStack>
    </RadzenAlert>

    <EditForm Model="Input" FormName="delete-user" OnValidSubmit="OnValidSubmitAsync" method="post">
        <DataAnnotationsValidator />
        <ValidationSummary class="rz-color-danger" role="alert" />

        <RadzenStack Gap="1.5rem">
            @if (requirePassword)
            {
                <RadzenStack Gap="0.5rem">
                    <RadzenLabel Text="Confirm Identity Credentials (Password)" Component="Input.Password"
                        TextStyle="TextStyle.Subtitle2" />
                    <RadzenTextBox @bind-Value="Input.Password" Name="Input.Password" Class="rz-w-100"
                        Style="height: 3rem; border-radius: 8px;" type="password" autocomplete="current-password"
                        aria-required="true" placeholder="Enter current password to authorize termination" />
                    <ValidationMessage For="() => Input.Password" Class="rz-color-danger" Style="font-size: 0.75rem;" />
                </RadzenStack>
            }

            <RadzenButton ButtonType="ButtonType.Submit" Text="Permanently Expunge Identity" Icon="delete"
                ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Large" Class="rz-w-100"
                Style="height: 3.5rem; border-radius: 12px; font-weight: bold;" />
        </RadzenStack>
    </EditForm>
</RadzenStack>

@code {
    private string? message;
    private ApplicationUser? user;
    private bool requirePassword;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Input ??= new();

        user = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }
        requirePassword = await UserManager.HasPasswordAsync(user);
    }

    private async Task OnValidSubmitAsync()
    {
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        if (requirePassword && !await UserManager.CheckPasswordAsync(user, Input.Password))
        {
            message = "Error: Clinical credentials rejected. Termination aborted.";
            return;
        }

        var result = await UserManager.DeleteAsync(user);
        if (!result.Succeeded)
        {
            throw new InvalidOperationException("Unexpected error occurred expunging user identity.");
        }

        await SignInManager.SignOutAsync();

        var userId = await UserManager.GetUserIdAsync(user);
        Logger.LogInformation("User with ID '{UserId}' terminated their own identity.", userId);

        RedirectManager.RedirectToCurrentPage();
    }

    private sealed class InputModel
    {
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";
    }
}

