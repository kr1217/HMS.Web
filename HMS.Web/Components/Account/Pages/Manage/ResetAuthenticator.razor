@*
 * FILE: ResetAuthenticator.razor
 * PURPOSE: Frontend web component.
 * COMMUNICATES WITH: None
*@
@page "/Account/Manage/ResetAuthenticator"

@using Microsoft.AspNetCore.Identity
@using HMS.Web.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager
@inject ILogger<ResetAuthenticator> Logger

<PageTitle>Security Orchestration | Reset Authenticator</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenText Text="Reset Authenticator Protocol" TextStyle="TextStyle.H5" Class="rz-m-0 rz-color-primary" />
    <StatusMessage />

    <RadzenAlert AlertStyle="AlertStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter" AllowClose="false"
        Icon="lock_reset">
        <RadzenStack Gap="0.5rem">
            <RadzenText Text="Critical Re-synchronization Notice" TextStyle="TextStyle.Subtitle2"
                Class="rz-font-weight-bold" />
            <RadzenText
                Text="Resetting the authenticator key will immediately sever the link with your current device. You must re-configure your authenticator app to restore access."
                TextStyle="TextStyle.Body2" />
            <RadzenText
                Text="This action temporarily disables 2FA safeguards. Failure to complete re-configuration may result in account inaccessibility."
                TextStyle="TextStyle.Caption" Class="rz-mt-2" />
        </RadzenStack>
    </RadzenAlert>

    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Class="rz-mt-4">
        <form @formname="reset-authenticator" @onsubmit="OnSubmitAsync" method="post">
            <AntiforgeryToken />
            <RadzenButton ButtonType="ButtonType.Submit" Text="Confirm Key Reset" Icon="published_with_changes"
                ButtonStyle="ButtonStyle.Danger" Variant="Variant.Filled" />
        </form>
    </RadzenStack>
</RadzenStack>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private async Task OnSubmitAsync()
    {
        var user = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        await UserManager.SetTwoFactorEnabledAsync(user, false);
        await UserManager.ResetAuthenticatorKeyAsync(user);
        var userId = await UserManager.GetUserIdAsync(user);
        Logger.LogInformation("User with ID '{UserId}' has reset their authentication app key.", userId);

        await SignInManager.RefreshSignInAsync(user);

        RedirectManager.RedirectToWithStatus(
        "Account/Manage/EnableAuthenticator",
        "Your authenticator protocol has been reset. Immediate re-configuration is required to restore safeguards.",
        HttpContext);
    }
}

