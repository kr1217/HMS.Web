@if (!string.IsNullOrEmpty(DisplayMessage))
{
    var severity = DisplayMessage.StartsWith("Error", StringComparison.OrdinalIgnoreCase) ? NotificationSeverity.Error :
    NotificationSeverity.Success;
    var alertStyle = DisplayMessage.StartsWith("Error", StringComparison.OrdinalIgnoreCase) ? AlertStyle.Danger :
    AlertStyle.Success;

    <RadzenAlert AlertStyle="@alertStyle" Variant="Variant.Flat" Shade="Shade.Lighter" Class="rz-mb-4"
        Icon="@(alertStyle == AlertStyle.Danger ? "error" : "check_circle")">
        @DisplayMessage
    </RadzenAlert>
}

@code {
    private string? messageFromCookie;

    [Parameter]
    public string? Message { get; set; }

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private string? DisplayMessage => Message ?? messageFromCookie;

    protected override void OnInitialized()
    {
        messageFromCookie = HttpContext.Request.Cookies[IdentityRedirectManager.StatusCookieName];

        if (messageFromCookie is not null)
        {
            HttpContext.Response.Cookies.Delete(IdentityRedirectManager.StatusCookieName);
        }
    }
}
