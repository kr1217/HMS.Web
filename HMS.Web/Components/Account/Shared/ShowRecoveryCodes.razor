<StatusMessage Message="@StatusMessage" />

<RadzenStack Gap="1.5rem">
    <RadzenText Text="Emergency Recovery Protocols" TextStyle="TextStyle.H5" Class="rz-m-0 rz-color-primary" />

    <RadzenAlert AlertStyle="AlertStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter" AllowClose="false"
        Icon="warning">
        <RadzenText Text="Secure Storage Mandatory" TextStyle="TextStyle.Subtitle2" Class="rz-font-weight-bold" />
        <RadzenText
            Text="Store these artifacts offline immediately. Loss of authenticator access without fallback protocols results in permanent lockout."
            TextStyle="TextStyle.Caption" />
    </RadzenAlert>

    <RadzenCard Class="rz-background-color-base-200 rz-shadow-2">
        <RadzenRow Gap="1rem">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <RadzenColumn Size="12" SizeSM="6" SizeMD="4">
                    <RadzenCard Variant="Variant.Outlined" Class="rz-p-2 rz-text-align-center rz-background-color-white">
                        <RadzenText Text="@recoveryCode" TextStyle="TextStyle.Body1"
                            Class="rz-m-0 rz-font-family-monospace rz-font-weight-bold" />
                    </RadzenCard>
                </RadzenColumn>
            }
        </RadzenRow>
    </RadzenCard>
</RadzenStack>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
