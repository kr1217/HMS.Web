@implements IDisposable
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HMS.Web</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        @using Radzen.Blazor
        <AuthorizeView Roles="Patient">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/dashboard">
                        <RadzenIcon Icon="dashboard" Style="margin-right: 10px;" /> Dashboard
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/appointments">
                        <RadzenIcon Icon="calendar_today" Style="margin-right: 10px;" /> Appointments
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/reports">
                        <RadzenIcon Icon="assignment" Style="margin-right: 10px;" /> Reports
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/prescriptions">
                        <RadzenIcon Icon="description" Style="margin-right: 10px;" /> Prescriptions
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/consultation">
                        <RadzenIcon Icon="video_call" Style="margin-right: 10px;" /> Consultation
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/bills">
                        <RadzenIcon Icon="payment" Style="margin-right: 10px;" /> Bills
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/token">
                        <RadzenIcon Icon="qr_code" Style="margin-right: 10px;" /> OPD Token
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/operations">
                        <RadzenIcon Icon="medical_services" Style="margin-right: 10px;" /> Operations
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient/support">
                        <RadzenIcon Icon="help_outline" Style="margin-right: 10px;" /> Support
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Doctor">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="doctor/dashboard">
                        <RadzenIcon Icon="dashboard" Style="margin-right: 10px;" /> Doctor Dashboard
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/dashboard">
                        <RadzenIcon Icon="admin_panel_settings" Style="margin-right: 10px;" /> Admin Console
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <RadzenIcon Icon="person" Style="margin-right: 10px;" /> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <RadzenIcon Icon="logout" Style="margin-right: 10px;" /> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <RadzenIcon Icon="person_add" Style="margin-right: 10px;" /> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <RadzenIcon Icon="login" Style="margin-right: 10px;" /> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
