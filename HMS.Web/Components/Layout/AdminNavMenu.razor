            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Teller">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="teller/dashboard">
                        <RadzenIcon Icon="point_of_sale" Style="margin-right: 10px;" /> Teller Dashboard
